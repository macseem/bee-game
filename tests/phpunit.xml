<phpunit bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="controllers">
            <directory>controllers</directory>
        </testsuite>
        <testsuite name="characters">
            <directory>characters</directory>
        </testsuite>
        <testsuite name="inside-game">
            <directory>game/inside</directory>
        </testsuite>
        <testsuite name="outside-game">
            <directory>game/outside</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../frontend/models</directory>
        </whitelist>
    </filter>
</phpunit>